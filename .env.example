DEBUG=1
# Generate a strong secret for real deployments (do NOT commit real secrets).
SECRET_KEY=change-me-in-real-life

# Comma-separated hosts for Django (set in prod, helpful in docker)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Optional: needed only when Django's CSRF origin checks require explicit origins
# (comma-separated, include scheme, e.g. https://thetuesdaysaloon.com)
CSRF_TRUSTED_ORIGINS=

DB_NAME=media
DB_USER=media
DB_PASSWORD=media
DB_HOST=db
DB_PORT=5432

# Optional: DB connection reuse (seconds)
DB_CONN_MAX_AGE=60

# Optional: security toggles for production
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=31536000
